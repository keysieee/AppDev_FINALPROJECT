<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Tasks</title>
</head>
<body>
    <h1>My Tasks</h1>
<ul>
    <% if (tasks && tasks.length > 0) { %>
        <% tasks.forEach(task => { %>
            <li>
                <strong><%= task.task_description %></strong> - 
                <%= task.task_date %> 
                (<%= task.is_done ? "Done" : "Pending" %>)
                <% if (!task.is_done) { %>
                    <form action="/employee/tasks/mark-done" method="POST" style="display:inline;">
                        <input type="hidden" name="taskId" value="<%= task.id %>" />
                        <button type="submit">Mark as Done</button>
                    </form>
                <% } %>
            </li>
        <% }) %>
    <% } else { %>
        <li>No tasks assigned yet.</li>
    <% } %>
</ul>
</body>
</html>
